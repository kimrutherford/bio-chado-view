<%args>
$type
$object
</%args>

<div class="object_page">
<table>
% for my $column_name ($object->columns()) {
%   next if $column_name eq 'created_stamp';
<tr>
%   if ($column_name =~ /(.*)_id$/) {
%     next if $1 eq $type;
%     $column_name = $1;
%   }
<td><span class="field_name"><% $column_name %></span>:</td>
<td><& ../field.mhtml, type => $type, object => $object, field_name => $column_name &></td>
</tr>
% }
</table>
</div>


<%init>
my $id_field_name = $type . '_id';
my $object_id = $object->$id_field_name();
</%init>
