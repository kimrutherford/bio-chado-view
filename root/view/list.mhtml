<%args>
$type
$rs
$list_title
</%args>

<div class="rs_list">
% if ($list_title ne '') {
  <div>
    <span class="title"> <% $list_title %> </span>
  </div>
% }
% if (@field_names == 0) {
  No results
% } else {
  <table class="list">
    <thead>
      <tr>
%   for my $head_col (@column_headings) {
        <td><span class="field_name"><% ucfirst $head_col %></span></td>
%   }
      <td>&nbsp;</td>
      </tr>
    </thead>
%   my $row_count = 0;
%   for my $object (@rows) {
    <tr class="<% $row_count % 2 == 0 ? 'even' : 'odd' %>">
%     for my $field_name (@field_names) {
        <td><& field.mhtml, type => $type, object => $object, field_name => $field_name &></td>
%     }
     <td><& field.mhtml, type => $type, object => $object, field_name => "${type}_id" &></td>
    </tr>
%     $row_count++;
%   }
  </table>
% }
</div>

<%init>
my @field_names = ();
my @column_headings = ();
my @rows = ();
my $first = 1;

my %field_infos = ();

if (defined $c->config()->{class_info}->{$type}->{field_infos}) {
  %field_infos = %{$c->config()->{class_info}->{$type}->{field_infos}};
}

while (my $obj = $rs->next) {
  if ($first) {
    for my $column_name ($obj->columns()) {
      next if $column_name eq 'created_stamp' or $column_name eq "${type}_id";
      push @field_names, $column_name;
      my $column_heading = undef;
      if (defined $field_infos{$column_name}) {
        $column_heading = $field_infos{$column_name}->{display_title}
      } else {
        $column_heading = $column_name;
        $column_heading =~ s/_/ /g;
      }
      push @column_headings, $column_heading;
    }
    $first = 0;
  }
  push @rows, $obj;
}

</%init>
