<%args>
$object
$type
@field_names
</%args>

<div class="field_list">
  <table>
% for my $field_name (@field_names) {
%   (my $display_field_name = $field_name) =~ s/_/ /g;
    <tr>
      <td><% $display_field_name %>:</td>
      <td>
      <td><& /view/field.mhtml, type => $type, object => $object, field_name => $field_name &></td>
    </tr>
% }
  </table>
</div>
